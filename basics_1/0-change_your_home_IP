#!/bin/bash
# This script updates /etc/hosts to redirect localhost and facebook.com

# Backup the original hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Remove existing entries for localhost and facebook.com
sudo sed -i '' '/localhost/d' /etc/hosts
sudo sed -i '' '/facebook.com/d' /etc/hosts

# Add new entries
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null

# Confirmation messages
echo "âœ… Changes successfully applied."
echo "ğŸ“Œ localhost â†’ 127.0.0.2"
echo "ğŸ“Œ facebook.com â†’ 8.8.8.8"
echo "âš ï¸ Remember to revert localhost to 127.0.0.1 if needed for system stability."
