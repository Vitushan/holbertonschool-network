#!/bin/bash
# Script Updated ip on ubuntu


HOSTS_FILE="/etc/hosts"
BACKUP_FILE="/etc/hosts.bak.$(date +%F_%T)"
sudo cp $HOSTS_FILE $BACKUP_FILE
echo "Backup of /etc/hosts completed: $BACKUP_FILE"

sudo sed -i '/localhost/d' $HOSTS_FILE
sudo sed -i '/facebook.com/d' $HOSTS_FILE

echo "127.0.0.2   localhost" | sudo tee -a $HOSTS_FILE
echo "8.8.8.8     facebook.com" | sudo tee -a $HOSTS_FILE

echo "/etc/hosts file updated:"
cat $HOSTS_FILE
